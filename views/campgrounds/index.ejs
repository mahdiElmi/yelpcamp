<% layout("layouts/boilerplate") %>

<div class="mb-3" id="cluster-map"></div>

<h1 class="text-center mb-3">All Campgrounds</h1>

<% for(let campground of campgrounds) { %>
<div class="card mb-3" style="height: 20rem">
  <!-- INLINE STYLE Change THIS LATER-->
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid card-img-start" src="<%= campground.images.length ? campground.images[0].url : "https://res.cloudinary.com/dicfw8ec0/image/upload/v1644411879/YelpCamp/re83l4f9rdxdncob9hiu.jpg" %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.location %> </small>
        </p>
        <a href="campgrounds/<%= campground.id %>" class="btn btn-primary">View <%= campground.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>"
  const campgrounds = {
    features: <%- JSON.stringify(campgrounds) %>
  }
</script>
<script src="/javascripts/clusterMap.js"></script>